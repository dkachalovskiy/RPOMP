<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:editable="false"
        android:layout_weight="1"
        android:inputType="number"
        android:gravity="right|center|bottom"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40pt"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/buAC"
            android:text="AC"
            android:onClick="clickAC"
            android:height="25pt"
            android:width="25pt"
            android:layout_weight="1"
            android:layout_marginRight="1pt"
            android:backgroundTint="@color/lightGrey"

           />
        <Button
            android:id="@+id/buPlusMinus"
            android:text="+/-"
            android:onClick="clickNumber"
            android:height="25pt"
            android:width="30pt"
            android:layout_weight="1"
            android:layout_marginRight="1pt"
            android:backgroundTint="@color/lightGrey"

            />
        <Button
            android:id="@+id/buPercent"
            android:text="%"
            android:onClick="clickPercent"
            android:height="25pt"
            android:width="30pt"
            android:layout_weight="1"
            android:layout_marginRight="1pt"
            android:backgroundTint="@color/lightGrey"

            />
        <Button
            android:id="@+id/buDivide"
            android:onClick="operation"
            android:text="/"
            android:height="25pt"
            android:width="30pt"
            android:layout_weight="1"
            android:layout_marginRight="1pt"
            android:backgroundTint="@color/orange"

            />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu7"
                android:text="7"
                android:onClick="clickNumber"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/grey"

                />
            <Button
                android:id="@+id/bu8"
                android:text="8"
                android:onClick="clickNumber"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/grey"

                />
            <Button
                android:id="@+id/bu9"
                android:text="9"
                android:onClick="clickNumber"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/grey"

                />
            <Button
                android:id="@+id/buMultiply"
                android:text="*"
                android:onClick="operation"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/orange"

                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu4"
                android:text="4"
                android:onClick="clickNumber"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/grey"

                />
            <Button
                android:id="@+id/bu5"
                android:text="5"
                android:onClick="clickNumber"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/grey"

                />
            <Button
                android:id="@+id/bu6"
                android:text="6"
                android:onClick="clickNumber"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/grey"

                />
            <Button
                android:id="@+id/buMinus"
                android:text="-"
                android:onClick="operation"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/orange"

                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu1"
                android:text="1"
                android:onClick="clickNumber"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/grey"

                />
            <Button
                android:id="@+id/bu2"
                android:text="2"
                android:onClick="clickNumber"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/grey"

                />
            <Button
                android:id="@+id/bu3"
                android:text="3"
                android:onClick="clickNumber"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/grey"

                />
            <Button
                android:id="@+id/buPlus"
                android:text="+"
                android:onClick="operation"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/orange"

                />
        </TableRow>

    </TableLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu0"
                android:text="0"
                android:onClick="clickNumber"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="2"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/grey"

                />
            <Button
                android:id="@+id/buDot"
                android:text="."
                android:onClick="clickNumber"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="3"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/grey"

                />
            <Button
                android:id="@+id/buEqual"
                android:text="="
                android:onClick="clickResult"
                android:height="25pt"
                android:width="30pt"
                android:layout_weight="3"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/orange"

                />

            />
        </TableRow>
    </LinearLayout>
</LinearLayout>