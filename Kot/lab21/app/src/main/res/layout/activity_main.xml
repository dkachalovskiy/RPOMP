<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:id="@+id/btnSensAcceleration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickAcceleration"
                android:text="@string/acceleration">
        </Button>
        <Button
                android:id="@+id/btnSensGPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSensAcceleration"
                android:onClick="onClickGPS"
                android:text="@string/gps" >
        </Button>
        <Button
                android:id="@+id/btnSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSensGPS"
                android:onClick="onClickSensor"
                android:text="@string/other_sensors">
        </Button>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>