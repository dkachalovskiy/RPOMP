<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_map_kot_a"
            android:id="@+id/showMap"
            android:onClick="onClickShowMap"/>


    <EditText
            android:id="@+id/etFromLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:autofillHints="Enter start location"
            android:layout_below="@+id/showMap"/>
        <EditText
                android:id="@+id/etToLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:autofillHints="Enter destination"
                android:layout_below="@+id/etFromLocation"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Get direction"
                android:id="@+id/btnGetDirection"
                android:layout_below="@+id/etToLocation"
                android:onClick="onClickShowDirection"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>